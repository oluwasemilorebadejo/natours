doctype html
html
  head
    block head 
      meta(charset="UTF-8")
      meta(name="viewport" content="width=device-width, initial-scale=1.0")
      link(rel="stylesheet" href="/css/style.css")
      link(rel="shortcut icon" type="img/png" href="/img/favicon.png")
      link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,300i,700")
      script(src='https://js.stripe.com/v3/')
      title Natours | #{title}

  body
    // header
    header.header 
      nav.nav.nav--tours 
        a.nav__el(href='/') All Tours 
      div.header__logo
        img(src="/img/logo-white.png" alt="Natours logo")
      nav.nav.nav--user
        //- user is from res.locals in the isloggedin function
        if user
          a.nav__el.nav__el--logout Logout
          a.nav__el(href="/me")
            img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
            span=user.name.split(' ')[0]
        else
          a.nav__el(href='/login') Login
          a.nav__el.nav__el--cta(href='/signup') Sign Up

    // content
    block content
      h1 this is a placeholder 

    // footer
    footer.footer
      div.footer__logo
        img(src="/img/logo-green.png" alt="Natours logo")
      ul.footer__nav
        li: a(href="#") About us
        li: a(href="#") Download Apps
        li: a(href="#") Become A Guide
        li: a(href="#") Careers
        li: a(href="#") Contact
      p.footer__copyright &copy; by blac. All rights reserved.

